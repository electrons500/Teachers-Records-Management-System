<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeachersrRecordsManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/vendors/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/lib/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/lib/vendors/selectFX/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/lib/vendors/jqvmap/dist/jqvmap.min.css">


    <link rel="stylesheet" href="~/lib/assets/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>


    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>




    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="#">TRMS ADMIN |</a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a asp-controller="Home" asp-action="Welcome"> <i class="menu-icon fa fa-dashboard"></i>Dashboard </a>
                    </li>

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-user"></i>Teachers</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-file-o"></i><a asp-controller="Teachers" asp-action="AddTeachers">Add Teacher</a></li>
                            <li><i class="fa fa-table"></i><a asp-controller="Teachers" asp-action="Index">Manage Teacher</a></li>
                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-cog"></i>Settings</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-plus-circle"></i><a asp-controller="Bank" asp-action="Addbanks">Add Banks</a></li>
                            <li><i class="menu-icon fa fa-th"></i><a asp-controller="Bank" asp-action="Index">Manage Banks</a></li>
                        </ul>
                    </li>






                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->
    <!-- Left Panel -->
    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">

            <div class="header-menu">

                <div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">


                    </div>
                </div>

                <div class="col-sm-5">

                    <div class="user-area dropdown float-right">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="~/lib/images/images.png" alt="User Avatar">
                        </a>

                        <div class="user-menu dropdown-menu">
                            <a class="nav-link" href="#"><i class="fa fa-user"></i> My Profile</a>

                            <a class="nav-link" href="#"><i class="fa fa-cog"></i>Change password</a>

                            <a class="nav-link" asp-controller="Home" asp-action="Logout"><i class="fa fa-power-off"></i> Logout</a>
                        </div>
                    </div>
                </div>
            </div>

        </header><!-- /header -->
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">

                            <li class="active">Dashboard</li>


                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-4">
            <!--body -->

            <main role="main" class="pb-3">
                @RenderBody()
            </main>


            <!--body -->

        </div> <!-- .content -->
    </div><!-- /#right-panel -->
    <!-- Right Panel -->








    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/vendors/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/assets/js/main.js"></script>
    <script src="~/lib/vendors/chart.js/dist/Chart.bundle.min.js"></script>
    <script src="~/lib/assets/js/dashboard.js"></script>
    <script src="~/lib/assets/js/widgets.js"></script>
    <script src="~/lib/vendors/jqvmap/dist/jquery.vmap.min.js"></script>
    <script src="~/lib/vendors/jqvmap/examples/js/jquery.vmap.sampledata.js"></script>
    <script src="~/lib/vendors/jqvmap/dist/maps/jquery.vmap.world.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>

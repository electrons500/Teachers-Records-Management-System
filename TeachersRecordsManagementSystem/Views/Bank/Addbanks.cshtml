@model TeachersrRecordsManagementSystem.Models.ViewModel.BankViewModel

@{
    ViewData["Title"] = "Addbanks";
    Layout = "~/Views/Shared/_FormsLayout.cshtml";
    ViewData["Value"] = 3;
    ViewData["ColumnName"] = "Banks";
    ViewData["SubOperationName"] = "Add banks";
}


<div class="row">
    <div class="col-md-10">
        <form  method="post" data-ajax="true" data-ajax-success="SuccessAlert()" data-ajax-failure="FailAlert()"  asp-action="Addbanks" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankName" class="control-label"></label>
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-dot-circle-o"> Submit</i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


 <script>
     function SuccessAlert() {
         toastr.success("Congratulation new bank successfully added!", "Success");
        
     }
     function FailAlert() {
         toastr.error("New bank failed to be added", "Error");
     }

     function RequestComplete() {
        window.Location("@Url.Action("Index")")
     }
 </script>

}
